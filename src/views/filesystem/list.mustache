<h1>Système de fichiers</h1>
<p class="lead">Liste des fichiers sur les disques connectés a la freebox</p>


<ul class="breadcrumb">
    {{# getDirectoryParts}}
    <li><a href="?service=filesystem&path={{path}}">{{name}}</a></li>
    {{/ getDirectoryParts}}
</ul>


<div class="row">
    {{# fileInfos}}
    <div class="col-lg-2 col-md-2 col-sm-2">

        <a href="?service=filesystem&path={{getPath}}" >
            <div class="panel panel-default" style="height: 250px">
                <div class="panel-heading">{{getName}}</div>
                <div class="panel-body">
                    {{# getImage}}
                    <img src="{{.}}" width="100px"/>
                    {{/ getImage}}
                    {{^ getImage}}
                        none
                    {{/ getImage}}

                </div>
            </div>
        </a>

    </div>
    {{/ fileInfos}}
</div>

